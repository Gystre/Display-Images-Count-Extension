{
    "name": "Display Images in Badge",
    "version": "1.0",
    "description": "displays the amount of images in a neat little badge, pretty nicee",
    "manifest_version": 2,
    "browser_action":{
        "default_title": "Replace Images"
    },"content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background":{
        "scripts": ["background.js"]
    },
    "permissions": ["tabs"]
}